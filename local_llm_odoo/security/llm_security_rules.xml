<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <!-- Record Rule: Users can only see their own conversations -->
        <record id="llm_conversation_user_rule" model="ir.rule">
            <field name="name">LLM Conversation: User Access</field>
            <field name="model_id" ref="model_llm_conversation"/>
            <field name="domain_force">[('user_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

        <!-- Record Rule: System admins can see all conversations -->
        <record id="llm_conversation_admin_rule" model="ir.rule">
            <field name="name">LLM Conversation: Admin Full Access</field>
            <field name="model_id" ref="model_llm_conversation"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('base.group_system'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

        <!-- Record Rule: Users can only see messages from their conversations -->
        <record id="llm_message_user_rule" model="ir.rule">
            <field name="name">LLM Message: User Access</field>
            <field name="model_id" ref="model_llm_message"/>
            <field name="domain_force">[('conversation_id.user_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

        <!-- Record Rule: System admins can see all messages -->
        <record id="llm_message_admin_rule" model="ir.rule">
            <field name="name">LLM Message: Admin Full Access</field>
            <field name="model_id" ref="model_llm_message"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('base.group_system'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

        <!-- Record Rule: Users can see their own configs and system-wide configs -->
        <record id="llm_config_user_rule" model="ir.rule">
            <field name="name">LLM Config: User Access</field>
            <field name="model_id" ref="model_llm_config"/>
            <field name="domain_force">['|', ('user_id', '=', user.id), ('user_id', '=', False)]</field>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <!-- Record Rule: System admins have full control over all configs -->
        <record id="llm_config_admin_rule" model="ir.rule">
            <field name="name">LLM Config: Admin Full Access</field>
            <field name="model_id" ref="model_llm_config"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('base.group_system'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

    </data>
</odoo>
