<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- LLM Conversation Tree View -->
    <record id="view_llm_conversation_tree" model="ir.ui.view">
        <field name="name">llm.conversation.tree</field>
        <field name="model">llm.conversation</field>
        <field name="arch" type="xml">
            <list string="Conversations">
                <field name="name"/>
                <field name="user_id"/>
                <field name="config_id"/>
                <field name="message_count"/>
                <field name="last_message_date"/>
                <field name="active" widget="boolean_toggle"/>
            </list>
        </field>
    </record>

    <!-- LLM Conversation Form View -->
    <record id="view_llm_conversation_form" model="ir.ui.view">
        <field name="name">llm.conversation.form</field>
        <field name="model">llm.conversation</field>
        <field name="arch" type="xml">
            <form string="Conversation">
                <header>
                    <button name="clear_messages" string="Clear Messages" type="object" class="btn-warning" confirm="Are you sure you want to delete all messages?"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive">
                            <field name="active" widget="boolean_button" options='{"terminology": "archive"}'/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Conversation Title"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="user_id" readonly="1"/>
                            <field name="config_id" options="{'no_create': True}"/>
                        </group>
                        <group>
                            <field name="message_count"/>
                            <field name="last_message_date"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Messages" name="messages">
                            <field name="message_ids" nolabel="1">
                                <list editable="bottom" create="0" delete="1">
                                    <field name="create_date"/>
                                    <field name="role" readonly="1"/>
                                    <field name="content" widget="text"/>
                                    <field name="tokens_used" readonly="1"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- LLM Conversation Search View -->
    <record id="view_llm_conversation_search" model="ir.ui.view">
        <field name="name">llm.conversation.search</field>
        <field name="model">llm.conversation</field>
        <field name="arch" type="xml">
            <search string="Search Conversations">
                <field name="name"/>
                <field name="user_id"/>
                <field name="config_id"/>
                <filter string="My Conversations" name="my_conversations" domain="[('user_id', '=', uid)]"/>
                <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
                <group expand="0" string="Group By">
                    <filter string="User" name="group_user" context="{'group_by': 'user_id'}"/>
                    <filter string="Configuration" name="group_config" context="{'group_by': 'config_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- LLM Conversation Action -->
    <record id="action_llm_conversation" model="ir.actions.act_window">
        <field name="name">Conversations</field>
        <field name="res_model">llm.conversation</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'search_default_my_conversations': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Start a new conversation with your AI assistant
            </p>
            <p>
                All your conversations are saved here for future reference.
            </p>
        </field>
    </record>
</odoo>
